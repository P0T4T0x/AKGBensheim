<resources>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Application base theme -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Color scheme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Style the toolbar -->
        <item name="toolbarStyle">@style/Widget.AppTheme.ActionBar</item>
    </style>

    <style name="Widget.AppTheme.ToolbarSpinner" parent="Widget.AppTheme.ToolbarSpinner.Base" />
    <style name="Widget.AppTheme.ToolbarSpinner.Base" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:actionBarItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:dropDownVerticalOffset">@dimen/action_bar_spinner_vertical_offset</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Widget.AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
</resources>
