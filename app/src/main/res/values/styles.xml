<resources>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Application base theme -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:textColorPrimaryInverse">@color/primaryTextInverse</item>
        <item name="android:textColorSecondaryInverse">@color/secondaryTextInverse</item>
    </style>

    <style name="Widget.AppTheme.ToolbarSpinner" parent="Widget.AppTheme.ToolbarSpinner.Base" />
    <style name="Widget.AppTheme.ToolbarSpinner.Base" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/actionbar_ripple</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:dropDownVerticalOffset">@dimen/action_bar_spinner_vertical_offset</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Widget.AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primary</item>
    </style>
</resources>