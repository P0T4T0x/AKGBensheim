<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/action_bar_spinner_padding"
    android:paddingEnd="@dimen/action_bar_spinner_padding"
    android:orientation="vertical"
    android:background="@drawable/abc_spinner_mtrl_am_alpha">

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/primaryTextInverse"
        android:textSize="18sp"
        android:textStyle="normal"/>

    <TextView
        android:id="@android:id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/action_bar_subtitle_top_margin"
        android:fontFamily="sans-serif"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:textSize="12sp"
        android:textStyle="bold"/>
</LinearLayout>