<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingRight="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/fastscroll_bubble"
        android:layout_gravity="end|right"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:textSize="48sp" tools:text="A"
        android:layout_width="wrap_content"
        android:textColor="#FFffffff"
        android:layout_height="wrap_content"
        android:background="@drawable/recyclerview_fastscroll_bubble"
        android:visibility="visible"/>

    <View
        android:id="@+id/fastscroll_handle"
        android:layout_width="4dp"
        android:layout_height="32dp"
        android:layout_gravity="end|right"
        android:background="@drawable/recyclerview_fastscroll_handle"/>

</merge>