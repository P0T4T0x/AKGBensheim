<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/subst_item_cv"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="5dp"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@anim/subst_list_item_selector"

    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="5dp"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardBackgroundColor="@color/material_blue_grey_800">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:textSize="@dimen/abc_text_size_medium_material"
            android:textColor="@color/primaryTextInverse"
            android:gravity="center"
            android:visibility="visible" />

        <View
            android:id="@+id/txtDivider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/secondaryTextInverse"/>

        <TextView
            android:id="@android:id/text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:textSize="@dimen/abc_text_size_medium_material"
            android:textColor="@color/primaryTextInverse"
            android:gravity="center" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txtType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtRoomSubst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txtLessonSubst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>